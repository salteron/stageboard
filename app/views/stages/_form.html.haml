= form_for @stage do |f|
  - if @stage.errors.any?
    #error_explanation
      %h2= "#{pluralize(@stage.errors.count, "error")} prohibited this stage from being saved:"
      %ul
        - @stage.errors.full_messages.each do |msg|
          %li= msg

  = 'Name'
  = f.text_field :name, :label => 'Name'

  = 'Url'
  = f.text_field :url, :label => 'Url'

  = 'Comment'
  = f.text_field :comment, :label => 'Comment'

  = 'Locked'
  = f.check_box :locked, :label => 'Locked'

  .actions
    = f.submit 'Save'
